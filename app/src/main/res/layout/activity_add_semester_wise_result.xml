<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="15dp">

    <Spinner
        android:id="@+id/semester_number"
        android:backgroundTint="@color/purple_800"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/credit"
        android:background="@drawable/round_secondary_white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:hint="@string/credit"
        android:inputType="number"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/sgpa"
        android:background="@drawable/round_secondary_white"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:hint="@string/gpa"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:padding="5dp"/>

    <Button
        android:id="@+id/close"
        android:background="@drawable/round_primary"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="5dp"
        android:drawableRight="@drawable/ic_baseline_close"/>



</LinearLayout>